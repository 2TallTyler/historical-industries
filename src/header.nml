// Create an error if OpenTTD version is before 1.10.0 (required for increased cargo types at industries)
if (version_openttd(1,10,0,28004) > openttd_version) {
	error(FATAL, string(STR_ERROR_GAME_VERSION));
}

// Create an error if the map is smaller than 256 x 256
if (map_min_edge < 256 || map_max_edge < 256) {
	error(FATAL, string(STR_ERROR_MAP_TOO_SMALL));
}

// Create an error if Recyclables parameter is active but Improved Town Layouts isn't active or is too old (requires Version 8 or newer)
if (param_recyclables == 1 && (param["TT\03\01", 254] < 8 || (grf_current_status("TT\03\01") == 0 && grf_future_status("TT\03\01") == 0))) {
	error(FATAL, string(STR_ERROR_RCLC_NEEDS_ITL));
}

// Disable base game industries
disable_item(FEAT_INDUSTRIES, 0, 36);

// Disable unused cargo types
disable_item(FEAT_CARGOS, 0, 30);


